<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height"
    android:background="@color/green"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="25dp"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/userAvatar"
        android:layout_width="@dimen/size_for_user_icon"
        android:layout_height="@dimen/size_for_user_icon"
        android:background="@drawable/shape_for_user_icon"
        android:src="@drawable/user_icon" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingBottom="@dimen/activity_vertical_margin">


        <TextView
            android:id="@+id/userLastName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Насурллаев"
            android:textSize="@dimen/size_for_TextView_user_nav"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/userFirstName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_for_TextView_user_nav"
            android:layout_marginBottom="@dimen/margin_for_TextView_user_nav"
            android:text="Илья"
            android:textSize="@dimen/size_for_TextView_user_nav"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/userSecondName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Евгеньевич"
            android:textSize="@dimen/size_for_TextView_user_nav"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>