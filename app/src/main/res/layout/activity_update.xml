<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UpdateActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="10dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/Update_imgProfile"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/shape_for_user_icon"
            android:src="@drawable/user_icon"
            app:civ_border_color="@color/green"
            app:civ_border_width="5dp" />

        <EditText
            android:id="@+id/Update_lastName"
            android:layout_width="match_parent"
            android:layout_height="@dimen/heightTextEditSignUp"
            android:backgroundTint="@color/green"
            android:ems="10"
            android:hint="Иванов"
            android:inputType="text"
            android:textSize="@dimen/sizeTextEditSignUp" />

        <EditText
            android:id="@+id/Update_firststName"
            android:layout_width="match_parent"
            android:layout_height="@dimen/heightTextEditSignUp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:backgroundTint="@color/green"
            android:ems="10"
            android:hint="Иван"
            android:inputType="text"
            android:textSize="@dimen/sizeTextEditSignUp" />

        <EditText
            android:id="@+id/Update_secondName"
            android:layout_width="match_parent"
            android:layout_height="@dimen/heightTextEditSignUp"
            android:backgroundTint="@color/green"
            android:ems="10"
            android:hint="Иванович"
            android:inputType="text"
            android:textSize="@dimen/sizeTextEditSignUp" />

        <EditText
            android:id="@+id/Update_Birthday"
            android:layout_width="match_parent"
            android:layout_height="@dimen/heightTextEditSignUp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:backgroundTint="@color/green"
            android:ems="10"
            android:hint="Дата Рождения"
            android:inputType="date"
            android:textSize="@dimen/sizeTextEditSignUp" />


        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:hint="Пол"
            android:paddingLeft="5dp"
            android:textSize="@dimen/sizeTextEditSignUp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/heightTextEditSignUp"
            android:background="@drawable/shape_for_spiner"
            android:orientation="vertical">

            <Spinner
                android:id="@+id/Update_Gender"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:backgroundTint="@color/green"
                android:textSize="@dimen/sizeTextEditSignUp" />

        </LinearLayout>

        <EditText
            android:id="@+id/Update_Phone"
            android:layout_width="match_parent"
            android:layout_height="@dimen/heightTextEditSignUp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:backgroundTint="@color/green"
            android:ems="10"
            android:hint="+7(910)-880-96-47"
            android:inputType="text"
            android:textSize="@dimen/sizeTextEditSignUp" />


        <Button
            android:id="@+id/Update_takeImg"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="выбрать изображение для профиля"
            android:textColor="@color/green"
            android:textSize="10dp"
            app:backgroundTint="@color/white" />

        <Button
            android:id="@+id/Update_saveUser"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:text="Сохранить изменения"
            android:textColor="@color/green"
            android:textSize="10dp"
            app:backgroundTint="@color/white" />

        <Button
            android:id="@+id/Update_back"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:text="Выйти"
            android:textColor="@color/green"
            android:textSize="10dp"
            android:onClick="back"
            app:backgroundTint="@color/white" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>